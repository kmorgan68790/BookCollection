<%- include("partials/header.ejs") %>

<div class="container" id="edit-box">
    <h1>Add New Book</h1>
    <form action="/add" method="POST">

        <label for="title">Title</label>
        <input type="text" name="title" id="title" class="form-control">
        
        <label for="isbn">ISBN</label>
        <input type="text" name="isbn" id="isbn" class="form-control">

        <label for="date">Date Read</label>
        <input type="text" name="date" id="date" class="form-control">

        <label for="rating">Rating</label>
        <input type="text" name="rating" id="rating" class="form-control">

        <label for="link">Book Link</label>
        <input type="text" name="link" id="link" class="form-control">

        <label for="summary">Summary</label>
        <input type="text" name="summary" id="summary" class="form-control">

        <label for="notes">Notes</label>
        <input type="text" name="notes" id="notes" class="form-control">
<!--         
        <label for="message">Message</label>
        <textarea name="message" id="message" placeholder="Type message here" rows="4"></textarea> -->
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>

